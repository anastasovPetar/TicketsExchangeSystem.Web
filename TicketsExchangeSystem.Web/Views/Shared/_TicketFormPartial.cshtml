@model TicketFormViewModel;
@using System.Globalization;

<container>
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <hr class="my-3">
            <form method="post" id="form1">
                <div class="form-group my-3">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Title...">
                    <span asp-validation-for="Title" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Country"></label>
                    <input asp-for="Country" class="form-control" placeholder="Country...">
                    <span asp-validation-for="Country" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" placeholder="City name...">
                    <span asp-validation-for="City" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="PlaceOfEvent"></label>
                    <input asp-for="PlaceOfEvent" class="form-control" placeholder="Place of event...">
                    <span asp-validation-for="PlaceOfEvent" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Address1"></label>
                    <input asp-for="Address1" class="form-control" placeholder="Address line 1...">
                    <span asp-validation-for="Address1" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Address2"></label>
                    <input asp-for="Address2" class="form-control" placeholder="Address line 2...">
                    <span asp-validation-for="Address2" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Picture url...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control">
                    <span asp-validation-for="Quantity" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="PricePerTicket"></label>
                    <input asp-for="PricePerTicket" class="form-control">
                    <span asp-validation-for="PricePerTicket" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="CurrencyId"></label>
                    <select asp-for="CurrencyId" class="form-control">
                        @foreach (var currency in Model.Currencies)
                        {
                            <option value="@currency.Id">@currency.CurrencyCode</option>
                        }
                    </select>
                    <span asp-validation-for="CurrencyId" class="small text-danger"></span>
                </div> 
                <div class="form-group my-3">
                    <label asp-for="EventDate" class="control-label"></label>
                    <input asp-for="EventDate" asp-format="{0:dd'/'MM'/'yyyy HH:mm}" class="datepicker form-control">
                    <span asp-validation-for="EventDate" class="small text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="small text-danger"></span>
                </div>
                <div class="text-center">
                    <input class="btn btn-outline-success mt-3" type="submit" value="Save" />
                </div>
            </form>
        </div>
    </div>
</container>


