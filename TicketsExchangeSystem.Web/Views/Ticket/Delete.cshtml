@model TicketDeleteViewModel

@{
    ViewBag.Title = "You are about to delete a Ticket";
}

<div class="container">
    <div class="d-grid gap-2 text-center">
        <div>
            <h2 class="display-2 mt-4">@ViewBag.Title</h2>
        </div>
        <div>
            <h5 class="display-4 mt-4"> <u>@Model.Title</u></h5>
        </div>
    </div>
</div>

<form method="post" asp-action="Delete">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.ImageUrl" alt="House Image">
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Country" class="control-label">In </label>
                <input asp-for="Country" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="PlaceOfEvent" class="control-label"></label>
                <input asp-for="PlaceOfEvent" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-4">
                <a class="btn btn-outline-primary mx-auto" onclick="history.go(-1);">Cancel</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
